<Window x:Class="Detrav.Terometr.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserElements="clr-namespace:Detrav.Terometr.UserElements"
        Height="300"
        Width="300"
        Style="{DynamicResource MainWindowStyle}"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged"
        Topmost="True"
        ShowInTaskbar="False"
        Title="Terometr - Дпс метр"
        MinHeight="20">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Terometr;component/Themes/MainWindowStyle.xaml" />
                <ResourceDictionary Source="/Terometr;component/Themes/ElementsStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel Background="{StaticResource TitleColor}"
                   Grid.Row="0">
            <Label Foreground="{StaticResource ResourceKey=TextColor}"
                   FontFamily="Comic Sans MS"
                   Margin="0"
                   Padding="0"
                   DockPanel.Dock="Left"
                   Content="{Binding Title,RelativeSource={RelativeSource FindAncestor,AncestorType=Window}}" />
            <Button x:Name="buttonHide"
                HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Style="{StaticResource TitleButtonStyle}"
                    ToolTip="Свернуть | Развернуть"
                    Click="buttonHide_Click">
                <Image Source="pack://application:,,,/Terometr;component/assets/images/Bottom.png"
                       Margin="0" />
            </Button>
            <Button x:Name="buttonInfo"
                HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Style="{StaticResource TitleButtonStyle}"
                    ToolTip="Нашли баг?">
                <Image Source="pack://application:,,,/Terometr;component/assets/images/Info.png"
                       Margin="0" />
            </Button>
            <Button x:Name="buttonForward"
                HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Style="{StaticResource TitleButtonStyle}"
                    ToolTip="Далее"
                    Click="buttonForward_Click">
                <Image Source="pack://application:,,,/Terometr;component/assets/images/Forward.png"
                       Margin="0" />
            </Button>
            <Button x:Name="buttonBack"
                HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Style="{StaticResource TitleButtonStyle}"
                    ToolTip="Назад"
                    Click="buttonBack_Click">
                <Image Source="pack://application:,,,/Terometr;component/assets/images/Back.png"
                       Margin="0" />
            </Button>
            <Button x:Name="buttonNew"
                HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Style="{StaticResource TitleButtonStyle}"
                    ToolTip="Очистить"
                    Click="buttonNew_Click">
                <Image Source="pack://application:,,,/Terometr;component/assets/images/New.png"
                       Margin="0" />
            </Button>
            <Button x:Name="buttonBubble"
                HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Style="{StaticResource TitleButtonStyle}"
                    ToolTip="Написать в час">
                <Image Source="pack://application:,,,/Terometr;component/assets/images/Bubble.png"
                       Margin="0" />
            </Button>
        </DockPanel>
        <Grid Grid.Row="1">
            <TabControl x:Name="tabControl"
                        Style="{DynamicResource tabControlStyle}"
                        SelectionChanged="tabControl_SelectionChanged">
                <TabItem Header="ДПС">
                    <UserElements:ListBoxBars x:Name="listDps" />
                </TabItem>
                <TabItem Header="Нанесено урона">
                    <UserElements:ListBoxBars x:Name="listDamage" />
                </TabItem>
                <TabItem Header="ХПС">
                    <UserElements:ListBoxBars x:Name="listHps" />
                </TabItem>
                <TabItem Header="Отхилино">
                    <UserElements:ListBoxBars x:Name="listHeal" />
                </TabItem>
                <TabItem Header="Получено урона">
                    <UserElements:ListBoxBars x:Name="listDamageTaken" />
                </TabItem>
                <TabItem Header="Получено хила">
                    <UserElements:ListBoxBars x:Name="listHealTaken" />
                </TabItem>
                <TabItem Header="Настройки">
                    <ListBox x:Name="Settings">
                        <CheckBox FontFamily="Comic Sans MS" Foreground="White">Тестовая настройка</CheckBox>
                    </ListBox>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
